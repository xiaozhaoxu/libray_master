<?xml version="1.0" encoding="utf-8"?>
<com.aspsine.swipetoloadlayout.view.TwitterRefreshHeaderView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="#ffff00">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/refresh_header_height_twitter"
            android:layout_gravity="center">

        <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="48dp"
                android:layout_toLeftOf="@+id/li_content"
                android:background="@drawable/twitter_pull_arrow"/>

        <ImageView
                android:id="@+id/ivSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="48dp"
                android:layout_toLeftOf="@+id/li_content"
                android:background="@drawable/qq_refresh_success"/>

        <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleSmallInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="48dp"
                android:layout_toLeftOf="@+id/li_content"/>

        <LinearLayout android:layout_width="150dp"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"

                      android:orientation="vertical"
                      android:id="@+id/li_content"
                      android:gravity="center">
            <TextView
                    android:id="@+id/tvRefresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#666666"/>
            <TextView
                    android:id="@+id/tvLastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>
</com.aspsine.swipetoloadlayout.view.TwitterRefreshHeaderView>